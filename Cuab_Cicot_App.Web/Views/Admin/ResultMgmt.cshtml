
@{
    ViewData["Title"] = "Result Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="db-breadcrumb">
        <ul class="db-breadcrumb-list">
            <li><a href="/Admin/dashboard"><i class="fa fa-home"></i>Home</a></li>
            <li>Result Management</li>
        </ul>
    </div>

    <div class="row">
        <!-- Your Profile Views Chart -->
        <div class="col-lg-12 m-b30">
            <div class="widget-box">
                <div class="wc-title">
                    <h4>Upload Result</h4>
                </div>
                <div class="widget-inner">
                    <form class="edit-profile m-b30">
                        <div class="row">
                            <div class="form-group col-4">
                                <label class="col-form-label">Matric Number</label>
                                <div>
                                    <input class="form-control" type="text" id="txtMatric" value="">
                                </div>
                            </div>
                            <div class="form-group col-4">
                                <label class="col-form-label">Course Code</label>
                                <div>
                                    <input class="form-control" type="text" id="txtCourseCode" value="">
                                </div>
                            </div>
                            <div class="form-group col-4">
                                <label class="col-form-label">Score</label>
                                <div>
                                    <input class="form-control" type="text" id="txtScore" value="">
                                </div>
                            </div>

                            <div class="col-12"></div>
                            <div class="col-8"></div>
                            <div class="col-4">
                                <button type="submit" class="btn" id="btnAddtoList">Add to List</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                @*<button type="button" class="btn-secondry add-item m-r5"><i class="fa fa-fw fa-plus-circle"></i>Bulk Upload</button>*@
                            </div>

                            <br />
                            <div class="col-8" style="margin-top:15px">
                                <table class="mb-0 table table-striped" id="resultTable">
                                    <thead>
                                        <tr>
                                            <th>Matric No</th>
                                            <th>Course Code</th>
                                            <th>Score</th>
                                            <th>Option</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- Your Profile Views Chart END-->
    </div>

